<p id="notice"><%= notice %></p>

<h1>Listing Addresses for <%= @contact.name %></h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>State</th>
      <th>Street</th>
      <th>Zipcode</th>
      <th>Address type</th>
      <th>Is default</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact.addresses.each do |address| %>
      <tr>
        <td><%= address.country.name %></td>
        <td><%= address.state.name %></td>
        <td><%= address.street %></td>
        <td><%= address.zipcode %></td>
        <td><%= address.address_type %></td>
        <td><%= address.is_default %></td>
        <td><%= link_to 'Show', contact_address_path(@contact, address) %></td>
        <td><%= link_to 'Edit', edit_contact_address_path(@contact, address) %></td>
        <td><%= link_to 'Destroy', contact_address_path(@contact, address), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_contact_address_path(@contact) %>
